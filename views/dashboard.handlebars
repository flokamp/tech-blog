<section class="create-post">
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <input type="text" id="post-title" name="post-title" placeholder="Your title" />
    </div>
    <div>
<textarea id="post-contents" name="post-contents" rows="4" cols="50" placeholder="What's new in tech?">
</textarea>
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>