<a class="btn btn-light m-2" href="/"> &larr; All posts</a>

<div class="p-5 list-group-item">
  <div class="d-flex w-100 justify-content-between">
    <h4 class="display-6">{{post.title}}</h1>
  </div>
  <p class="text-start">{{post.contents}}</p>

  {{#if loggedIn}}
    <form class="pt-2 comment-form">
      <div class="row mt-4 mb-4">
        <div class="col">
          <input type="text" class="form-control form-control-lg" name="comment-body" placeholder="Leave a comment...">
        </div>
      <div class="col">
        <button type="submit" class="btn btn-primary btn-lg mb-2">Comment</button>
      </div>
      </div>
    </form>
  {{/if}}
</div>
<div>
  {{> comments post.comments}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}